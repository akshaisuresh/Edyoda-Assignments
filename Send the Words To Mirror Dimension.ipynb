    "def reverse_word(word):\n",
    "    return word[::-1]\n",
    "\n",
    "\n",
    "# Accept input from the user\n",
    "word = input(\"Enter a word: \")\n",
    "\n",
    "# Reverse the word\n",
    "reversed_word = reverse_word(word)\n",
    "\n",
    "# Print the reversed word\n",
    "print(reversed_word)\n"
